{
  "name": "gitlance-peek-extension",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "copy:manifest": "cp ./src/manifest.json ./dist/manifest.json",
    "copy": "yarn run copy:manifest",
    "build:css": "node-sass --source-map true -o dist src",
    "build:js:content": "browserify -d ./src/content.ts -p [ tsify ] | exorcist ./dist/content.bundle.js.map > ./dist/content.bundle.js",
    "build:js:background": "browserify -d ./src/background.ts -p [ tsify ] | exorcist ./dist/background.bundle.js.map > ./dist/background.bundle.js",
    "build:js": "yarn run build:js:content & yarn run build:js:background",
    "build:all": "yarn run build:css; yarn run build:js",
    "build": "yarn run clean && yarn run copy && yarn run build:all",
    "pretest": "tsc",
    "test": "nyc ava",
    "report": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noomorph/gitlance-peek-extension.git"
  },
  "keywords": [
    "browser-extension",
    "github-extension",
    "ranking",
    "rank",
    "developer",
    "hr",
    "recruiting",
    "recruitment",
    "gitlance",
    "github"
  ],
  "author": "Yaroslav Serhieiev <noomorph@gmail.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/noomorph/gitlance-peek-extension/issues"
  },
  "homepage": "https://github.com/noomorph/gitlance-peek-extension#readme",
  "ava": {
    "require": [
      "./dist/background",
      "./dist/content"
    ]
  },
  "devDependencies": {
    "@types/lodash": "^4.14.54",
    "ava": "^0.18.2",
    "browserify": "^14.1.0",
    "coveralls": "^2.11.16",
    "exorcist": "^0.4.0",
    "node-sass": "^4.5.0",
    "nyc": "^10.1.2",
    "tsify": "^3.0.1",
    "tslint": "^4.5.1",
    "typescript": "^2.2.1",
    "web-ext": "^1.8.1"
  },
  "dependencies": {
    "lodash": "^4.17.4"
  }
}
